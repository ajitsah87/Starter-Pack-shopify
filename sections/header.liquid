<style>
  .header {
    width: 100%;
    background: #ffffff;
  }

  .header__top {
    border-bottom: 1px solid #e5e5e5;
    padding: 0.5rem 1rem;
  }

  .header__main-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0.5rem 1rem;
  }

  .header__top-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .search-form {
    position: relative;
    width: 240px;
  }

  .search-input {
    width: 100%;
    padding: 0.5rem 2.5rem 0.5rem 2.5rem;
    border: 1px solid #e5e5e5;
    border-radius: 4px;
  }

  .search-icon {
    position: absolute;
    left: 0.75rem;
    top: 50%;
    transform: translateY(-50%);
    width: 16px;
    height: 16px;
  }

  .header__logo {
    height: 48px;
    object-fit: contain;
  }

  .header__logo-mobile {
    height: 32px;
    object-fit: contain;
  }

  .header__icons {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .currency-selector {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .flag-icon {
    width: 16px;
    height: 16px;
  }

  .nav__desktop {
    border-bottom: 1px solid #e5e5e5;
  }

  .nav__list {
    display: flex;
    justify-content: center;
    gap: 2rem;
    padding: 1rem 0;
    list-style: none;
    margin: 0;
  }

  .nav__link {
    text-decoration: none;
    color: #000000;
    transition: color 0.2s;
  }

  .nav__link:hover {
    color: #9e1918;
  }

  .header__mobile {
    display: none;
    padding: 0.5rem 1rem;
    border-bottom: 1px solid #e5e5e5;
  }

  .mobile-menu__toggle {
    background: none;
    border: none;
    padding: 0.5rem;
    cursor: pointer;
  }

  .mobile-menu {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 280px;
    height: 100vh;
    background: #ffffff;
    padding: 2rem 1rem;
    z-index: 1000;
    transform: translateX(-100%);
    transition: transform 0.3s ease-in-out;
  }

  .mobile-menu.is-active {
    transform: translateX(0);
    display: block;
  }

  .mobile-menu__links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  @media screen and (max-width: 768px) {
    .header__top,
    .nav__desktop {
      display: none;
    }

    .header__mobile {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
  }
</style>

<div class="header">
