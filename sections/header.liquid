    </div>
  </nav>

  <div class="mobile-menu" id="mobile-menu">
    <div class="mobile-menu__links">
      <a href="/collections/new-arrivals" class="nav__link">New Arrivals</a>
      <a href="/collections/all" class="nav__link">Shop</a>
      <a href="/collections" class="nav__link">Collections</a>
      <a href="/collections/ghar-ka-tyohaar" class="nav__link">Ghar Ka Tyohaar</a>
      <a href="/collections/influencers-picks" class="nav__link">Influencers' Picks</a>
      <a href="/collections/accessories" class="nav__link">Accessories</a>
      <a href="/collections/khadi-cotton" class="nav__link">Khadi Cotton</a>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuToggle = document.querySelector('.js-mobile-menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    
    mobileMenuToggle.addEventListener('click', function() {
      mobileMenu.classList.toggle('is-active');
    });
  });
</script>

