
{%- style -%}
.header {
  width: 100%;
  background: #ffffff;
}

.header__top {
  border-bottom: 1px solid #e5e5e5;
  padding: 0.5rem 1rem;
}

.header__main-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0.5rem 1rem;
}

.header__top-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.search-form {
  position: relative;
  width: 240px;
}

.search-input {
  width: 100%;
  padding: 0.5rem 2.5rem 0.5rem 2.5rem;
  border: 1px solid #e5e5e5;
  border-radius: 4px;
}

.search-icon {
  position: absolute;
  left: 0.75rem;
  top: 50%;
  transform: translateY(-50%);
  width: 16px;
  height: 16px;
}

.header__logo {
  height: 48px;
  object-fit: contain;
}

.header__logo-mobile {
  height: 32px;
  object-fit: contain;
}

.header__icons {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.currency-selector {
  display: flex;
  align-items: center;
  gap: 0.25rem;
}

.flag-icon {
  width: 16px;
  height: 16px;
}

.nav__desktop {
  border-bottom: 1px solid #e5e5e5;
}

.nav__list {
  display: flex;
  justify-content: center;
  gap: 2rem;
  padding: 1rem 0;
  list-style: none;
  margin: 0;
}

.nav__link {
  text-decoration: none;
  color: #000000;
  transition: color 0.2s;
}

.nav__link:hover {
  color: #9e1918;
}

.header__mobile {
  display: none;
  padding: 0.5rem 1rem;
  border-bottom: 1px solid #e5e5e5;
}

.mobile-menu__toggle {
  background: none;
  border: none;
  padding: 0.5rem;
  cursor: pointer;
}

.mobile-menu {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 280px;
  height: 100vh;
  background: #ffffff;
  padding: 2rem 1rem;
  z-index: 1000;
  transform: translateX(-100%);
  transition: transform 0.3s ease-in-out;
}

.mobile-menu.is-active {
  transform: translateX(0);
  display: block;
}

.mobile-menu__links {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

@media screen and (max-width: 768px) {
  .header__top,
  .nav__desktop {
    display: none;
  }

  .header__mobile {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
}
{%- endstyle -%}

<div class="header">
  <div class="header__top">
    <div class="header__main-container">
      <div class="header__top-content">
        <form action="/search" method="get" class="search-form">
          <input type="text" name="q" placeholder="Search for items" class="search-input">
          {% render 'icon-search' %}
        </form>

        <a href="/" class="header__logo-wrapper">
          {% if section.settings.logo %}
            {{ section.settings.logo | image_url: width: 180 | image_tag: class: 'header__logo', alt: shop.name }}
          {% else %}
            <span class="h4">{{ shop.name }}</span>
          {% endif %}
        </a>

        <div class="header__icons">
          <div class="currency-selector">
            <img src="data:image/png;base64," alt="India Flag" class="flag-icon">
            <span>INR</span>
          </div>
          <a href="/wishlist" class="icon-link">{% render 'icon-heart' %}</a>
          <a href="/account" class="icon-link">{% render 'icon-user' %}</a>
          <a href="/cart" class="icon-link">{% render 'icon-bag' %}</a>
        </div>
      </div>
    </div>
  </div>

  <div class="header__mobile">
    <button class="mobile-menu__toggle js-mobile-menu-toggle">
      {% render 'icon-menu' %}
    </button>

    <a href="/" class="header__logo-wrapper">
      {% if section.settings.logo %}
        {{ section.settings.logo | image_url: width: 120 | image_tag: class: 'header__logo-mobile', alt: shop.name }}
      {% else %}
        <span class="h4">{{ shop.name }}</span>
      {% endif %}
    </a>

    <div class="header__icons">
      <button class="js-search-toggle">{% render 'icon-search' %}</button>
      <a href="/cart" class="icon-link">{% render 'icon-bag' %}</a>
    </div>
  </div>

  <nav class="nav__desktop">
    <div class="header__main-container">
      <ul class="nav__list">
        <li><a href="/collections/new-arrivals" class="nav__link">New Arrivals</a></li>
        <li><a href="/collections/all" class="nav__link">Shop</a></li>
        <li><a href="/collections" class="nav__link">Collections</a></li>
        <li><a href="/collections/ghar-ka-tyohaar" class="nav__link">Ghar Ka Tyohaar</a></li>
        <li><a href="/collections/influencers-picks" class="nav__link">Influencers' Picks</a></li>
        <li><a href="/collections/accessories" class="nav__link">Accessories</a></li>
        <li><a href="/collections/khadi-cotton" class="nav__link">Khadi Cotton</a></li>
      </ul>
    </div>
  </nav>

  <div class="mobile-menu" id="mobile-menu">
    <div class="mobile-menu__links">
      <a href="/collections/new-arrivals" class="nav__link">New Arrivals</a>
      <a href="/collections/all" class="nav__link">Shop</a>
      <a href="/collections" class="nav__link">Collections</a>
      <a href="/collections/ghar-ka-tyohaar" class="nav__link">Ghar Ka Tyohaar</a>
      <a href="/collections/influencers-picks" class="nav__link">Influencers' Picks</a>
      <a href="/collections/accessories" class="nav__link">Accessories</a>
      <a href="/collections/khadi-cotton" class="nav__link">Khadi Cotton</a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 250,
      "step": 10,
      "unit": "px",
      "label": "Logo width",
      "default": 180
    }
  ]
}
{% endschema %}

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuToggle = document.querySelector('.js-mobile-menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    
    mobileMenuToggle.addEventListener('click', function() {
      mobileMenu.classList.toggle('is-active');
    });
  });
</script>