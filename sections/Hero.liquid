<style>
  .hero {
    position: relative;
    width: 100%;
    background-color: #f5f5f5;
    overflow: hidden;
  }

  .hero__image {
    width: 100%;
    height: auto;
    display: block;
  }

  .hero__content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    width: 100%;
    max-width: 600px;
    padding: 20px;
  }

  .hero__title {
    color: #ffffff;
    font-size: 18px;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 10px;
  }

  .hero__heading {
    color: #ffffff;
    font-size: 64px;
    line-height: 1.2;
    font-family: "Playfair Display", serif;
    margin-bottom: 20px;
  }

  .hero__button {
    display: inline-block;
    background-color: #8B3232;
    color: #ffffff;
    padding: 15px 40px;
    border-radius: 4px;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: background-color 0.3s ease;
  }

  .hero__button:hover {
    background-color: #6B2727;
  }

  @media screen and (max-width: 768px) {
    .hero__content {
      padding: 15px;
    }

    .hero__title {
      font-size: 16px;
    }

    .hero__heading {
      font-size: 36px;
    }

    .hero__button {
      padding: 12px 30px;
    }
  }
</style>

<div class="hero">
  <img 
    src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/image-scWfyKHE2oiFDSj9ppNg0IQxKhy2HN.png"
    alt="Introducing Rangeela Collection - Traditional Indian Fashion"
    class="hero__image"
  >
  <div class="hero__content">
    <h2 class="hero__title">Introducing</h2>
    <h1 class="hero__heading">Rangeela</h1>
    <p class="hero__title">Collection</p>
    <a href="/collections/rangeela" class="hero__button">Shop Now</a>
  </div>
</div>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "hero-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Introducing"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Rangeela"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Subtext",
      "default": "Collection"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Image"
    }
  ]
}
{% endschema %}